extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://making-the-web.com/sites/default/files/clipart/130134/blindfold-cliparts-130134-7636593.jpg", alt="Book")
                        .card__content
                            h2.product__price $9.99
                            p.product__description A very interesting book ever i read.
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Product Available
        
